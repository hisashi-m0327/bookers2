<div class="d-flex justify-content-center">
  <div style="width: 400px; padding-top: 20px;">
    <h2>User info</h2>
    <%= form_with model: @user do |f| %>
      <div class="mb-3">
        <%= f.label :Name %><br>
        <%= f.text_field :name, style: "width: 400px;" %>
      </div>
      <div class="mb-3">
        <%= f.label :Image %><br>
        <%= f.file_field :image %>
      </div>
      <div class="mb-2">
        <%= f.label :Intoroduction %><br>
        <%= f.text_area :intoroduction, style: "width: 400px;" %>
      <div class="mt-2">
        <%= f.submit "Update User", style: "background-color: #708090; color: white;
         padding: 5px 10px; border: none; border-radius: 4px;" %>
      </div>
    <% end %>
  </div>
</div>

