<div class= "container">
  <div class= "row">
    <%= render 'books/sidebar', book: @book %>

    <div class= "col-md-8 offset-md-1 mt-4">
      <h3>Users</h3>
      <table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image.variant(resize: "100x100") %>
          <% else %>
            <%= image_tag "no_image.jpg", size: "100x100" %>
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>