<div class= "container">
  <div class= "row">
    <%= render 'books/sidebar' %>
    

    <div class= "col-md-8">
      <h3>Books</h3>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <% if book.user.image.attached? %>
                  <%= image_tag book.user.image, size: "100x100" %>
                <% else %>
                  <%= image_tag "no_image.jpg", size: "100x100" %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>  
  </div>
</div>