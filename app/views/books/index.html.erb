<div class= "container">
  <div class= "row">
    <%= render 'books/sidebar', book: @book %>
    

    <div class= "col-md-8 offset-md-1 mt-4">
      <h3>Books</h3>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                  <% if book.user.profile_image.attached? %>
                    <%= image_tag book.user.profile_image.variant(resize: "100x100") %>
                  <% else %>
                    <%= image_tag "no_image.jpg", size: "100x100" %>
                  <% end %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>  
  </div>
</div>