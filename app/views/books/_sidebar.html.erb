<div class= "col-md-3">
  <% if book.errors.any? %>
    <%= book.errors.count %> errors prohibited this obj from being saved:
      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
      
    <div class="mt-4">
      <h3>User info</h3>
  
      <% if user.profile_image.attached? %>
        <%= image_tag user.profile_image.variant(resize: "100x100") %>
      <% else %>
        <%= image_tag "no_image.jpg", size: "100x100" %>
      <% end %>

      <table class="table">
          <tr>
            <th>Name</th>
            <td><strong><%= user.name %></strong></td>
          </tr>
          <tr>
            <th>Introduction</th>
            <td><strong><%= user.introduction %></strong></td>
          </tr>
      </table>
      
      
        <%= link_to edit_user_path(user), class: "btn btn-outline-secondary p-2 custom-btn" do %>
          <i class="fa-solid fa-user-gear text-secondary"></i>  
        <% end %>
      

      

      <h3>New book</h3>

      <%= form_with model: book, url: books_path do |f| %>
        <div class="mb-2">
          <h6>Title</h6>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="mb-2">
          <h6>Opinion</h6>
          <%= f.text_area :body, class: "form-control", rows: 2 %>
        </div>

        <div class="mt-2">
          <%= f.submit "Create Book", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
</div>