<div class="d-flex justify-content-center">
  <div style="width: 400px;">
    <h1>Editing Book</h1>
    <%= form_with model: @book, url: books_path do |f| %>             <%# 既にあるデータを使うので@bookを使う %>
      <div class="mb-2">
        <h6>Title</h6>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="mb-2">
        <h6>Opinion</h6>
        <%= f.text_area :body, class: "form-control", rows: 2 %>
      </div>

      <div class="mt-2">
        <%= f.submit "Update Book", class: "btn btn-success" %>
      </div>
    <% end %>

    <div class="mt-3">
      <%= link_to "Show", book_path(@book) %>|
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
