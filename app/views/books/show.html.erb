<div class= "container">
  <div class= "row">
    <%= render 'books/sidebar', book: @new %>
  
    <div class= "col-md-8 offset-md-1 mt-4">
      <h3>Book detail</h3>
      <table class="table">
        <colgroup>
          <col style="width: 10%;">
          <col style="width: 20%;">
          <col style="width: 40%;">
        </colgroup>
        
        <tbody>
          
            <tr>
              <td>
                <% if @book.user.profile_image.attached? %>
                  <%= image_tag @book.user.profile_image.variant(resize: "100x100") %>
                <% else %>
                  <%= image_tag "no_image.jpg", size: "100x100" %>
                <% end %>
                <br>
                <%= link_to @book.user.name, user_path(@book.user) %>
              </td>
              <td><%= link_to @book.title, book_path(@book) %></td>
              <td><%= @book.body %></td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success btn-sm" %>
                <% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?",
                   class: "btn btn-danger btn-sm" %>
                <% end %>
              </td>
            </tr>
          
        </tbody>
      </table>
  </div>
</div>