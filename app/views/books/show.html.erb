<div class= "container">
  <div class= "row">
    <div class= "col-md-4">

      <h3>User info</h3>
  
      <% if current_user.image.attached? %>
        <%= image_tag current_user.image, size: "100x100" %>
      <% else %>
        <%= image_tag "no_image.jpg", size: "100x100" %>
      <% end %>

      <table class="table">
          <tr>
            <th>Name</th>
            <td><%= current_user.name %></td>
          </tr>
          <tr>
            <th>Introduction</th>
            <td><%= current_user.introduction %></td>
          </tr>
      </table>

      <%= link_to "ユーザー設定", edit_user_path(current_user) %>

      <h3>New book</h3>

      <%= form_with model: Book.new, url: books_path do |f| %>
        <div class="mb-2">
          <h6>Title</h6>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="mb-2">
          <h6>Opinion</h6>
          <%= f.text_area :body, class: "form-control", rows: 2 %>
        </div>

        <div class="mt-2">
          <%= f.submit "Create Book", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>

    <div class= "col-md-8">
      <h3>Book detail</h3>
      <table class="table">
        <tbody>
          <% current_user.books.each do |book| %>
            <tr>
              <td>
                <% if @book.user.image.attached? %>
                  <%= image_tag @book.user.image, size: "100x100" %>
                <% else %>
                  <%= image_tag "no_image.jpg", size: "100x100" %>
                <% end %>
                <br>
                <%= link_to book.user.name, user_path(book.user) %>
              </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
              <td>
                <% if current_user == book.user %>
                  <%= link_to "Edit", edit_book_path(book), class: "btn btn-success" %>
                <% end %>
              </td>
              <td>
                <% if current_user == book.user %>
                  <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?",
                   class: "btn btn-danger btn-sm" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>