<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand text-white" href="<%= root_path %>">Bookers</a>

          <ul class="navbar-nav ms-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "Home", user_path(current_user), class: "nav-link text-white" %>
              </li>
              <li class="nav-item">
                <%= link_to "Users", users_path, class: "nav-link text-white" %>
              </li>
              <li class="nav-item">
                <%= link_to "Books", books_path, class: "nav-link text-white" %>
              </li>
              <li class="nav-item">
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link text-white" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Home", root_path, class: "nav-link text-white" %>
              </li>
              <li class="nav-item">
                <%= link_to "About", about_path, class: "nav-link text-white" %>
              </li>
              <li class="nav-item">
                <%= link_to "Sign up", new_user_registration_path, class: "nav-link text-white" %>
              </li>
              <li class="nav-item">
                <%= link_to "Log in", new_user_session_path, class: "nav-link text-white" %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>

    <%= yield %>

    <footer style="text-align: center; padding: 100px;">
      <h6>Copyright Infratop.inc</h6>
    </footer>
  </body>
</html>
